<Page x:Class="Eternity.MPVM.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Eternity.MPVM.Pages"
      xmlns:viewmodels="clr-namespace:Eternity.MPVM.ViewModels" 
      d:DataContext="{d:DesignInstance Type=viewmodels:MainPageViewModel}"
      mc:Ignorable="d">

    <Page.DataContext>
        <viewmodels:MainPageViewModel/>
    </Page.DataContext>

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <!-- Заголовок страницы -->
            <TextBlock Text="{Binding PageTitle}" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,20"/>

            <!-- Кнопки для навигации -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,20">
                <Button Content="Перейти на Test Page" Margin="10" Command="{Binding NavigateToPageCommand}" CommandParameter="TestPage"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
