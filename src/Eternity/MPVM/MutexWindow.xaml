<Window x:Class="Eternity.MPVM.MutexWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Eternity.MPVM"
        xmlns:behaviors="clr-namespace:Eternity.Resources.Behaviors"
        mc:Ignorable="d"
        Title="Mutex" Height="280" Width="600"
        WindowStyle="None" Style="{StaticResource CustomWindowChrome}"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    
    <i:Interaction.Behaviors>
        <behaviors:WindowBehavior DragMove="True" />
    </i:Interaction.Behaviors>

    <Grid>
        <TextBlock Text="The application is already running." 
                   VerticalAlignment="Center" HorizontalAlignment="Center" 
                   FontSize="16" TextWrapping="Wrap" TextAlignment="Center"/>
    </Grid>
</Window>
